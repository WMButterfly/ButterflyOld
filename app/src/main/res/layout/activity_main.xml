<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
        >

    <!--Record Fragment Container-->
    <fragment
            android:name="com.windowmirror.android.controller.fragment.AudioRecordFragment"
            android:id="@+id/fragment_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    <!--Settings Fragment Container-->
    <fragment
        android:name="com.windowmirror.android.controller.fragment.SettingsFragment"
        android:id="@+id/fragment_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--History Fragment Container-->
    <fragment
            android:name="com.windowmirror.android.feed.FeedFragment"
            android:id="@+id/fragment_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            />

</LinearLayout>