<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.windowmirror.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
    Commented out to remove always listening feature.
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".controller.MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.actions.CREATE_NOTE" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.VOICE" />
                <data android:mimeType="*/*"/>
            </intent-filter>
        </activity>

        <activity android:name=".controller.SplashActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.AuthActivity" />

        <!-- Do not enable automatically: to ensure compliance with Google Play policy,
             should not record user until they have explicitly accepted some sort of privacy terms -->

        <!-- commented out to remove always listening
        <receiver
            android:name=".service.BootReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        end disable -->

        <service android:name=".service.SpeechApiService" />
        <!-- commented out to remove always listening
        <service android:name=".service.SphynxService" />
        end disable -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5ff0a3912c5e513fd9dc2d186a2653737371d038" />
    </application>

</manifest>
